<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TampilPegawai">

    <ImageView
        android:id="@+id/home"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/top_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-180dp">
        <FrameLayout
            android:id="@+id/b1"
            android:layout_width="80dp"
            android:layout_height="49dp"
            android:background="@drawable/shape"
            android:backgroundTint="#2C2F56">

            <Button
                android:id="@+id/add"
                android:layout_width="80dp"
                android:layout_height="49dp"
                android:backgroundTint="#2C2F56"
                android:layout_gravity="center_horizontal"
                android:text="ADD"
                android:textSize="12dp"
                android:fontFamily="@font/sora_semibold"
                android:textColor="@color/white"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/b2"
            android:layout_toRightOf="@+id/b1"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:background="@drawable/shape"
            android:backgroundTint="#2C2F56"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <Button
                android:id="@+id/Refresh"
                android:layout_width="120dp"
                android:layout_height="49dp"
                android:backgroundTint="#2C2F56"
                android:layout_gravity="center_horizontal"
                android:text="REFRESH"
                android:onClick="refresh"
                android:textSize="12dp"
                android:fontFamily="@font/sora_semibold"
                android:textColor="@color/white"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/b3"
            android:layout_toRightOf="@+id/b2"
            android:layout_width="90dp"
            android:layout_height="49dp"
            android:background="@drawable/shape"
            android:backgroundTint="#2C2F56">

            <Button
                android:id="@+id/exit"
                android:layout_width="90dp"
                android:layout_height="49dp"
                android:backgroundTint="#2C2F56"
                android:layout_gravity="center_horizontal"
                android:text="EXIT"
                android:onClick="exit"
                android:textSize="12dp"
                android:fontFamily="@font/sora_semibold"
                android:textColor="@color/white"/>

        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDTE AND DELETE DATA"
        android:fontFamily="@font/sora_semibold"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"/>


    <EditText
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:backgroundTint="#D6DFF4"
        android:hint="ID Pegawai"
        android:gravity="center"
        android:textSize="12dp"
        android:fontFamily="@font/sorareguler"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape"
        android:id="@+id/editTextId" />


    <EditText
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:backgroundTint="#D6DFF4"
        android:hint="Nama"
        android:gravity="center"
        android:textSize="12dp"
        android:fontFamily="@font/sorareguler"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:id="@+id/editTextName" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:backgroundTint="#D6DFF4"
        android:hint="Posisi"
        android:gravity="center"
        android:textSize="12dp"
        android:fontFamily="@font/sorareguler"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:id="@+id/editTextDesg" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:backgroundTint="#D6DFF4"
        android:hint="Salary"
        android:gravity="center"
        android:textSize="12dp"
        android:fontFamily="@font/sorareguler"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:id="@+id/editTextSalary" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <FrameLayout
            android:id="@+id/b10"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:background="@drawable/shape"
            android:backgroundTint="#2C2F56">

            <Button
                android:layout_width="100dp"
                android:layout_height="49dp"
                android:backgroundTint="#2C2F56"
                android:layout_gravity="center_horizontal"
                android:text="UPDATE"
                android:textSize="12dp"
                android:fontFamily="@font/sora_semibold"
                android:textColor="@color/white"
                android:id="@+id/buttonUpdate" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/b11"
            android:layout_toRightOf="@id/b10"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:background="@drawable/shape"
            android:backgroundTint="#2C2F56"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <Button
                android:layout_width="100dp"
                android:layout_height="49dp"
                android:backgroundTint="#2C2F56"
                android:layout_gravity="center_horizontal"
                android:text="DELETE"
                android:textSize="12dp"
                android:fontFamily="@font/sora_semibold"
                android:textColor="@color/white"
                android:id="@+id/buttonDelete" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/b12"
            android:layout_toRightOf="@id/b11"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:background="@drawable/shape"
            android:backgroundTint="#2C2F56">

            <Button
                android:layout_width="100dp"
                android:layout_height="49dp"
                android:backgroundTint="#2C2F56"
                android:layout_gravity="center_horizontal"
                android:text="BACK"
                android:textSize="12dp"
                android:fontFamily="@font/sora_semibold"
                android:textColor="@color/white"
                android:id="@+id/kembali"
                android:onClick="kembali"/>

        </FrameLayout>
    </RelativeLayout>



</LinearLayout>